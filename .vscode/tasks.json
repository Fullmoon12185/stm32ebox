// Name these taks the way you want
// Configure command in make to use desired amount of threads (now 4)
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4"]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean"]
        },
        {
            "label": "Flash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j8","flash"]
        },
    ]
}